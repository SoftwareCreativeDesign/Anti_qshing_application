<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Night Mode -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">#121212</item> <!-- 다크 모드용 어두운 회색 -->
        <item name="colorPrimaryVariant">#1F1F1F</item> <!-- 더 어두운 회색 -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- 흰색 텍스트 -->

        <!-- Secondary Colors -->
        <item name="colorSecondary">#BB86FC</item> <!-- 보조 색상 (보라색 톤) -->
        <item name="colorSecondaryVariant">#3700B3</item>
        <item name="colorOnSecondary">#FFFFFF</item> <!-- 흰색 텍스트 -->

        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- 버튼 스타일 커스터마이즈 -->
        <item name="buttonStyle">@style/CustomButtonStyleNight</item>
    </style>

    <!-- 커스텀 버튼 스타일 정의 (Night Mode) -->
    <style name="CustomButtonStyleNight" parent="Widget.MaterialComponents.Button">
        <item name="android:background">#333333</item> <!-- 어두운 회색 배경 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 흰색 텍스트 -->
        <item name="android:textSize">15sp</item> <!-- 버튼 텍스트 크기 -->
    </style>
</resources>
